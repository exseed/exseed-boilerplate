{
  "preset": "node-style-guide",
  "esnext": true,
  "fileExtensions": [".js"],
  "excludeFiles": [
    "node_modules/**",
    "build/**",
  ],
  "maximumLineLength": {
    "value": 80,
    "allExcept": ["comments", "urlComments", "require"]
  },
  "requireCapitalizedComments": null,
  "requireSemicolons": true,
  "validateQuoteMarks": null,
  "requireEarlyReturn": false
}